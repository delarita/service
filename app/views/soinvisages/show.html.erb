<div class="false-menu"></div>
<div class="under-menu">
  <h1 class="under-title"><%= link_to "Soins", soinvisages_path %></h1>
  <h2><%= @soinvisage.name %></h2>
  <% if policy(Soinvisage).edit? %>
      <br/>
      <br/>
      <%= link_to edit_soinvisage_path(@soinvisage) do %>
       <i class="far fa-edit"></i>
      <% end %>
    <% end %>
  <span class="retour-accueil"><%= link_to "ACCUEIL", root_path %></span>
