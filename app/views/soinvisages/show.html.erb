<div class = "container">
  <div class="cardsnoflex">
    <%= @soinvisage.description %>
    <br/>
    <%= @soinvisage.rich_content %>
    <% if @soinvisage.photo.attached? %>
      <br/>
      <%= cl_image_tag @soinvisage.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
</div>
