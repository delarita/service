<%= form_for order_item remote: true do |f| %>
  <% raise %>
  <%= f.hidden_field :product_id, value: order_item.id %>
  <h5><%= order_item.unit_price_cents %></h5>
  <div class="form-group">
    <%= f.text_field :quantity, value: order_item.quantity.to_i, min: 1, class: 'form-control' %>
  </div>
  <div class="btn-group">
    <%= f.submit "Update Quantity", class: 'btn btn-primary' %>
    <%= link_to "Delete", order_item, method: :delete, remote: true, class: 'btn btn-danger'  %>
  </div>
  <span>Total Price: <%= order_item.total_price_cents %></span>
<% end %>
